
@model UrunGuncelleModel

<form asp-action="Guncelle" asp-controller="Home" asp-area="Admin" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">

    <input type="hidden"asp-for="@Model.Id"/>
    <div class="form-group">
        <label>Ürünün Adı</label>
        <span asp-validation-for="@Model.Ad" class="text-danger"></span>
        <input asp-for="@Model.Ad" />
    </div>

    <div class="form-group">
        <label>Ürünün Fiyatı</label>
        <span asp-validation-for="@Model.Fiyat" class="text-danger"></span>
        <input asp-for="@Model.Fiyat" />
    </div>

    <div class="form-group">
        <label>Ürünün Resmi</label>

        <input type="file" asp-for="@Model.Resim" class="form-control-file" />
    </div>

    <div class="form-group">
        <a asp-action="Index" asp-controller="Home" asp-area="Admin" class="btn btn-warning">Geri Dön</a>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>

@section JavaScript{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
